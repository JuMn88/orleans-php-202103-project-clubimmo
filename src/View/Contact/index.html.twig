{% extends 'layout.html.twig' %}

{% block content %}
       
<div class="container-contact container-fluid">
        <h2 class="h2 title-contactform container text-center col-lg-9 col-md-9 col-12 mb-5 shadow-sm p-3 text-light rounded-3">
            CONTACTEZ-NOUS
        </h2>

        <div class="container col-lg-5 col-md-9 col-12">
            <form>

                <div class="form-group row mb-3">
                    <label class="col-lg-4 col-md-4 col-12 col-form-label" for="firstname">Prénom</label>
                    <div class="col-lg-8 col-md-8 col-12">
                        <input class="form-control" type="text" id="firstname" name="firstname" placeholder="Votre prénom" required />
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label class="col-lg-4 col-md-4 col-12 col-form-label" for="lastname">Nom</label>
                    <div class="col-lg-8 col-md-8 col-12">
                        <input class="form-control" type="text" id="lastname" name="lastname" placeholder="Votre nom" required/>
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label class="col-lg-4 col-md-4 col-12 col-form-label" for="phone">Numéro de téléphone</label>
                    <div class="col-lg-8 col-md-8 col-12">
                        <input class="form-control" type="tel" id="phone" name="phone" placeholder="00 11 22 33 44" required />
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label for="email" class="col-lg-4 col-md-4 col-12 col-form-label">Email</label>
                    <div class="col-lg-8 col-md-8 col-12">
                        <input type="email" class="form-control" id="email" name="email" placeholder="Email" />
                    </div>
                </div>

                <div class="form-group row text-center mb-2 p-3">
                    <p class="text-collapse">Vous êtes propriétaire et vous voulez déposez un dossier ?</p>
                    <a href="#form-hidden" class="btn-group-sm btn-default text-collapse" data-bs-toggle="collapse" data-bs-target="#form-hidden" aria-expanded="false" aria-controls="#form-hidden"><p class="font-weight-normal font-italic">Cliquez ici</p></a>                    
                </div>

                <!--This section is only showed when clicking on "cliquez ici"-->

                <div id="form-hidden" class="collapse">
                    <div class="form-group row mb-3">
                        <label class="col-lg-4 col-md-4 col-12 col-form-label" for="immotype">Type de bien</label>
                        <div class="col-lg-8 col-md-8 col-12">
                            <select name="immo-type" id="immo-type" class="form-control custom-select" size="1">
                                <option value="">Choisissez un type de bien</option>
                                <option value="">Maison</option>
                                <option value="">Appartement</option>
                                <option value="">Autres</option>
                            </select>
                        </div>
                    </div>               

                    <div class="form-group row mb-3">
                        <label class="col-lg-4 col-md-4 col-12 col-form-label" for="text">Adresse</label>
                        <div class="col-lg-8 col-md-8 col-12">
                            <input class="form-control" type="text" id="address" name="address" placeholder="Votre adresse" required />
                        </div>
                    </div>

                    <div class="form-group row mb-3">
                        <label class="col-lg-4 col-md-4 col-12 col-form-label" for="text">Ville</label>
                        <div class="col-lg-8 col-md-8 col-12">
                            <input class="form-control" type="text" id="city" name="city" placeholder="Votre ville" required />
                        </div>
                    </div>

                    <div class="form-group row mb-3">
                        <label class="col-lg-4 col-md-4 col-12 col-form-label" for="text">Code postal</label>
                        <div class="col-lg-8 col-md-8 col-12">
                            <input class="form-control" type="text" id="postalcode" name="postalcode" placeholder="Code postal" required />
                        </div>
                    </div>
                </div>
                <!--The hidden section by default ends here-->

                <div class="form-group row mb-3">
                    <label class="col-lg-4 col-md-4 col-12 col-form-label" for="immotype">Type de bien</label>
                    <div class="col-lg-8 col-md-8 col-12">
                        <select name="immo-type" id="immo-type" class="form-control custom-select" size="1">
                            <option value="">Choisissez un sujet</option>
                            <option value="">Je cherche un bien à acheter</option>
                            <option value="">Je cherche un bien à louer</option>
                            <option value="">J'ai un bien à louer</option>
                            <option value="">Autres</option>
                        </select>
                    </div>
                </div>       

                <div class="form-group row mb-3">
                    <label class="col-lg-4 col-md-4 col-12 col-form-label" for="message">Message</label>
                    <div class="col-lg-8 col-md-8 col-12">
                        <textarea class="form-control" id="message" rows="5" name="message" placeholder="Écrivez votre message" required></textarea>
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label class="col-lg-4 col-md-4 col-12 col-form-label"></label>
                    <div class="col-lg-8 col-md-8 col-12 text-center">
                        <button type="submit" class="btn-contactForm btn text-light col-lg-4 col-md-4 col-4">
                           Envoyez
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

{% endblock %}
