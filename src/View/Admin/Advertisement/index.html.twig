{% extends 'layout.html.twig' %}

{% block stylesheet %}
    <link rel="stylesheet" href="/assets/css/admin_advertisement.css">
{% endblock %}

{% block content %}

    <main class="container">
        <h1 class="mt-5 pb-2">
            Liste des annonces
        </h1>

        <a class="btn btn-purple mb-3" href="/adminAdvertisement/add">Ajouter une annonce</a>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Référence</th>
                    <th>Surface</th>
                    <th>Prix</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for property in properties %}
                <tr>
                    <td>{{ property.reference}}</td>
                    <td>{{ property.surface}}</td>
                    <td>{{ property.price}}</td>
                    <td></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </main>
{% endblock %}