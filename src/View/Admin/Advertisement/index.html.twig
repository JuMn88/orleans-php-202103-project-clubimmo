{% extends 'layout.html.twig' %}

{% block stylesheet %}
<link rel="stylesheet" href="/assets/css/admin_advertisement.css">
{% endblock %}

{% block content %}
    <main class="container adminAdvertisement">
        <h2 class="pb-2 text-center">
            Liste des annonces
        </h2>

        <div class="my-5 d-flex justify-content-center justify-content-md-start">
            <a class="btn btn-purple" href="/adminAdvertisement/add">Ajouter une annonce</a>
        </div>
        <table class="mb-5 table table-hover">
            <thead>
                <tr>
                    <th>Référence</th>
                    <th>Surface</th>
                    <th>Prix</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for property in properties %}
                    <tr>
                        <td>{{ property.reference }}</td>
                        <td>{{ property.surface }}</td>
                        <td>{{ property.price }}</td>
                        <td><!-- TO DO Edit and Delete buttons--></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </main>
{% endblock %}